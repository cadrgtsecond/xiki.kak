#!/bin/execlineb
# We use execlineb as this also serves as a test for its presence

importas -iS HOME
importas -SD ${HOME}/.config XDG_CONFIG_HOME
if { mkdir -p ${XDG_CONFIG_HOME}/xiki/scripts }
if { cp -Trf ./scripts ${XDG_CONFIG_HOME}/xiki/scripts }
if { cp -f ./default ${XDG_CONFIG_HOME}/xiki/.* }
importas -iS PATH
forbacktickx -Ed: bindir { printf %s $PATH }
if { test $bindir = ${HOME}/.local/bin }
cp -f ./xiki -t ${HOME}/.local/bin
